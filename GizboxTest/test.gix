import <"core">  
import <"stdlib">  

using Core;  
using Console;
using Collections;

GC::Disable();

namespace Person
{
    int totalPersonCount = 0;

    Person PersonBorn(string personName)
    {
        Person newPerson = new Person();
        newPerson.age = 0;
        newPerson.name = personName;
        newPerson.job = Person::Job::Undefined;
        Person::totalPersonCount++;
        return newPerson;
    }

    void PersonDie(Person person)
    {
        if(person != null)
        {
            delete person;
            Person::totalPersonCount--;
        }
    }
}
namespace Person::Job
{
    const int Undefined = 0;
    const int Student = 2;
    const int Teacher = 4;
    const int Engineer = 8;
    const int Cook = 16;
}
class Person
{
    int job = 0;
    string name = "";
    int age = 0;
}

//create instance  
Person sam = Person::PersonBorn("Sam");
sam.age = 25;
sam.job = Person::Job::Student;

for(int i = 0; i < 99; i++)
{
    sam.age += 1;
    Console::Log(sam.name + " is now " + (string)(sam.age) + " years old!");

    if(sam.age > 90)
    {
        Person::PersonDie(sam);
        break;
    }
}